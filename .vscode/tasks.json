{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pack",
            "type": "shell",
            "command": "nasher install",
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },     
        {
            "label": "Compile Solution",
            "type": "shell",
            "command": "nasher compile",
            "presentation": {
                "reveal": "always"
            },
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Sync from Toolset",
            "type": "shell",
            "command": "nasher unpack",
            "presentation": {
                "reveal": "always"
            },
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Extract Snippets",
            "type": "process",
            "args": [
                "C:\\Program Files (x86)\\Steam\\steamapps\\common\\Neverwinter Nights\\ovr\\nwscript.nss",
                "${file}",
                "${fileDirname}",
                "${workspaceFolder}\\.vscode\\nss.code-snippets"
            ],
            "command": [
                "./tools/NSSnippets.exe"
            ],
            "problemMatcher": []
        },
        {
            "label" : "killProcess",
            "type": "shell",
            "command": "taskkill /F /IM nwmain.exe",
            "problemMatcher": [],
        },       
    ]
}