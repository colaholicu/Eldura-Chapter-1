    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pack",
            "type": "shell",
            "command": "nasher install",
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "nasher test --default",
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Compile",
            "type": "shell",
            "command": "nasher compile ${file}",
            "presentation": {
                "reveal": "always"
            },
            "group": "none"
        },
        {
            "label": "Compile Solution",
            "type": "shell",
            "command": "nasher compile",
            "presentation": {
                "reveal": "always"
            },
            "group": "none"
        },
        {
            "label": "Unpack",
            "type": "shell",
            "command": "nasher unpack",
            "presentation": {
                "reveal": "always"
            },
            "group": "none"
        }
    ]
}